    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'pfs-util' archive feature",
            "cargo": {
                "args": [
                    "build",
                    "--bin=pfs-util",
                    "--package=pfs-util"
                ],
                "filter": {
                    "name": "pfs-util",
                    "kind": "bin"
                }
            },
            "args": ["archive", "./sample/demo.ini", "debug_output.pfs"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'pfs-util' unarchive feature",
            "cargo": {
                "args": [
                    "build",
                    "--bin=pfs-util",
                    "--package=pfs-util"
                ],
                "filter": {
                    "name": "pfs-util",
                    "kind": "bin"
                }
            },
            "args": ["unarchive", "./sample/demo.pfs"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'pfs-util'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=pfs-util",
                    "--package=pfs-util"
                ],
                "filter": {
                    "name": "pfs-util",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}